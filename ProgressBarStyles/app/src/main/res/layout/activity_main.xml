<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0B0A"
    android:orientation="vertical"

  >

    <android.inwhites.com.progressbarstyles.RoundProgressBar
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/roundBar"

        />


    <android.inwhites.com.progressbarstyles.HorizontalProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/horizonBar"
        android:layout_margin="10dp"
        />
    <android.inwhites.com.progressbarstyles.SectorProgressBar
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/sectorProgress"

        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:layout_below="@+id/roundBar"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="#FFF6EB"
        android:text="开始"
        />
</LinearLayout>
